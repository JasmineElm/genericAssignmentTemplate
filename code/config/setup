#!/bin/sh

# grab a copy of a suitable template, and save it as "def.tex
cd ../template
curl -o def.tex https://raw.githubusercontent.com/Wandmalfarbe/pandoc-latex-template/master/eisvogel.tex
# grab the correct csl template...
curl -O https://raw.githubusercontent.com/citation-style-language/styles/master/harvard-cite-them-right.csl
